{
  "name": "robot-framework-toolkit",
  "displayName": "Robot Framework Toolkit",
  "description": "Create and manage Robot Framework test, resource, variables, and locators files with smart import management",
  "version": "1.0.10",
  "publisher": "Haitham-Al-Mughrabi",
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/haitham-almughrabi/rf-files-creator.git"
  },
  "categories": [
    "Other",
    "Snippets",
    "Testing"
  ],
  "keywords": [
    "robot framework",
    "robotframework",
    "test automation",
    "resource",
    "locators"
  ],
  "activationEvents": [
    "onView:rfImportSelector",
    "onCommand:rfFilesCreator.createTestFile",
    "onCommand:rfFilesCreator.createResourceFile",
    "onCommand:rfFilesCreator.createVariablesFile",
    "onCommand:rfFilesCreator.createLocatorsFile",
    "onCommand:rfFilesCreator.editImports"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rfFilesCreator.createTestFile",
        "title": "Create Robot Framework Test File"
      },
      {
        "command": "rfFilesCreator.createResourceFile",
        "title": "Create Robot Framework Resource File"
      },
      {
        "command": "rfFilesCreator.createVariablesFile",
        "title": "Create Robot Framework Variables File"
      },
      {
        "command": "rfFilesCreator.createLocatorsFile",
        "title": "Create Robot Framework Locators File"
      },
      {
        "command": "rfFilesCreator.editImports",
        "title": "Edit Robot Framework Imports"
      },
      {
        "command": "rfFilesCreator.confirmImports",
        "title": "Confirm Imports",
        "icon": "$(check)"
      },
      {
        "command": "rfFilesCreator.cancelImports",
        "title": "Cancel",
        "icon": "$(close)"
      },
      {
        "command": "rfFilesCreator.searchImports",
        "title": "Search Imports",
        "icon": "$(search)"
      },
      {
        "command": "rfFilesCreator.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "rfFilesCreator.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "rfFilesCreator.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "rfFilesCreator.viewFile",
        "title": "View File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "rfFilesCreator.goToTarget",
        "title": "Go to Target File",
        "icon": "$(file-symlink-file)"
      },
      {
        "command": "rfFilesCreator.refreshImports",
        "title": "Refresh Imports",
        "icon": "$(refresh)"
      },
      {
        "command": "rfFilesCreator.deleteImport",
        "title": "Delete Import",
        "icon": "$(trash)"
      },
      {
        "command": "rfFilesCreator.viewCurrentImport",
        "title": "View File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "rfFilesCreator.viewKeywords",
        "title": "View Keywords",
        "icon": "$(symbol-method)"
      },
      {
        "command": "rfFilesCreator.insertKeywordFromTree",
        "title": "Insert Keyword"
      },
      {
        "command": "rfFilesCreator.selectKeywordForInfo",
        "title": "View Keyword Info"
      },
      {
        "command": "rfFilesCreator.insertKeywordFromInfo",
        "title": "Insert Keyword"
      },
      {
        "command": "rfFilesCreator.viewKeywordDoc",
        "title": "View Keyword Documentation"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rf-toolkit",
          "title": "Robot Framework Toolkit",
          "icon": "$(symbol-misc)"
        }
      ]
    },
    "views": {
      "rf-toolkit": [
        {
          "id": "rfImportSelector",
          "name": "Import Libraries & Resources",
          "icon": "$(checklist)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "rfFilesCreator.refreshImports",
          "when": "view == rfImportSelector",
          "group": "navigation@0"
        },
        {
          "command": "rfFilesCreator.goToTarget",
          "when": "view == rfImportSelector",
          "group": "navigation@1"
        },
        {
          "command": "rfFilesCreator.searchImports",
          "when": "view == rfImportSelector",
          "group": "navigation@1"
        },
        {
          "command": "rfFilesCreator.clearSearch",
          "when": "view == rfImportSelector && rfHasActiveSearch",
          "group": "navigation@2"
        },
        {
          "command": "rfFilesCreator.expandAll",
          "when": "view == rfImportSelector",
          "group": "navigation@3"
        },
        {
          "command": "rfFilesCreator.collapseAll",
          "when": "view == rfImportSelector",
          "group": "navigation@4"
        },
        {
          "command": "rfFilesCreator.confirmImports",
          "when": "view == rfImportSelector && rfHasPendingChanges",
          "group": "navigation@5"
        },
        {
          "command": "rfFilesCreator.cancelImports",
          "when": "view == rfImportSelector && rfHasPendingChanges",
          "group": "navigation@6"
        }
      ],
      "view/item/context": [
        {
          "command": "rfFilesCreator.viewFile",
          "when": "view == rfImportSelector && viewItem == file",
          "group": "inline"
        },
        {
          "command": "rfFilesCreator.viewKeywords",
          "when": "view == rfImportSelector && viewItem == file",
          "group": "inline"
        },
        {
          "command": "rfFilesCreator.viewCurrentImport",
          "when": "view == rfImportSelector && viewItem == currentImport",
          "group": "inline"
        },
        {
          "command": "rfFilesCreator.deleteImport",
          "when": "view == rfImportSelector && viewItem == currentImport",
          "group": "inline"
        },
        {
          "command": "rfFilesCreator.viewKeywords",
          "when": "view == rfImportSelector && viewItem == currentImport",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "rfFilesCreator.createTestFile",
          "group": "navigation@10",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.createResourceFile",
          "group": "navigation@11",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.createVariablesFile",
          "group": "navigation@12",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.createLocatorsFile",
          "group": "navigation@13",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.editImports",
          "group": "navigation@14",
          "when": "resourceExtname == .robot || resourceExtname == .resource"
        }
      ]
    }
  },
  "configuration": {
    "title": "Robot Framework Toolkit",
    "properties": {
      "robotFrameworkToolkit.importPathType": {
        "type": "string",
        "enum": [
          "relative",
          "absolute"
        ],
        "default": "relative",
        "description": "Default path type for imports: 'relative' for paths relative to file location, 'absolute' for workspace root paths",
        "enumDescriptions": [
          "Relative paths (e.g., ../folder/file.py)",
          "Workspace root paths (e.g., folder/file.py)"
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
