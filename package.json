{
  "name": "rf-files-creator",
  "displayName": "Robot Framework Files Creator",
  "description": "Create Robot Framework test, resource, variables, and locators files with predefined templates",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "robot framework",
    "robotframework",
    "test automation",
    "resource",
    "locators"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rfFilesCreator.createTestFile",
        "title": "Create Robot Framework Test File"
      },
      {
        "command": "rfFilesCreator.createResourceFile",
        "title": "Create Robot Framework Resource File"
      },
      {
        "command": "rfFilesCreator.createVariablesFile",
        "title": "Create Robot Framework Variables File"
      },
      {
        "command": "rfFilesCreator.createLocatorsFile",
        "title": "Create Robot Framework Locators File"
      },
      {
        "command": "rfFilesCreator.editImports",
        "title": "Edit Robot Framework Imports"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "rfFilesCreator.createTestFile",
          "group": "navigation@10",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.createResourceFile",
          "group": "navigation@11",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.createVariablesFile",
          "group": "navigation@12",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.createLocatorsFile",
          "group": "navigation@13",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "rfFilesCreator.editImports",
          "group": "navigation@14",
          "when": "resourceExtname == .robot || resourceExtname == .resource"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
